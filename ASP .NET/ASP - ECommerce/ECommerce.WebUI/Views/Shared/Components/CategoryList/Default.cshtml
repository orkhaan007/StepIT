@model CategoryListViewModel
<section class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
        <div class="d-flex justify-content-between align-items-center">
            <a href="/@Model.CurrentController/index?category=@item.CategoryId" style="cursor:pointer;" class="@css">
                @item.CategoryName
            </a>

            @if (Model.ShowDeleteButtons && item.CategoryId != 0)
            {
                <a class="btn btn-danger btn-sm"
                        href="/admin/deletecategory?categoryId=@item.CategoryId">
                    Delete
                </a>
            }
        </div>
    }
</section>
